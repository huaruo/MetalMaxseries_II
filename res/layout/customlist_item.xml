<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="4dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/white"
    android:listSelector="@drawable/list_item_style01"
    android:id="@+id/cli_rl"
    >
    <ImageView
        android:id="@+id/cli_itemimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_alignParentLeft="true"
        />
    <LinearLayout
        android:id="@+id/cli_ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:layout_toRightOf="@+id/cli_itemimg"
        >
        <TextView
            android:id="@+id/cli_bigitemtitle"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="20sp"
        	android:textColor="@color/black"
        	android:text="TextView01"
        />
        <TextView
            android:id="@+id/cli_smallitemtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:text="TextView02"
            />
    </LinearLayout>
    <CheckBox 
        android:id="@+id/cli_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@+id/cli_lastimg"
        />
    <ImageView
        android:id="@+id/cli_lastimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>